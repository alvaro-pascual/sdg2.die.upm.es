int main(void) {

	FILE *ptr_file;
		int buf[10];
		int k;
		for(k=0; k<10; k++){
			*(buf + k) = 0;
		}

		ptr_file = fopen("/root/practica2/Entrada2d.txt", "r");
		if(!ptr_file){
			return 1;
		}

		int aux = 0;
		int aux2 = 0;
		int i = 0;
		for(i=0;i<10;i++){


				if( feof(ptr_file)){
					break ;
				}

			fscanf(ptr_file, "%d", &aux2);




				*(buf + i) = aux2;
				printf("valor de i; %d\n", i);
		}

		int j;
		for(j=0; j<10; j++){

		aux += *(buf + j);
		}
			printf("la suma es %d\n", aux);





		fclose(ptr_file);

	return 0;
}
